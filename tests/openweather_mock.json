{
  "uuid": "mockoon-openweather-guanacaste",
  "name": "OpenWeather Mock API",
  "endpointPrefix": "",
  "latency": 0,
  "port": 3000,
  "routes": [
    {
      "uuid": "route-geo-direct",
      "documentation": "Mocked geocoding endpoint for city lookup",
      "method": "get",
      "endpoint": "/geo/1.0/direct",
      "responses": [
        {
          "uuid": "resp-geo-guanacaste",
          "label": "Guanacaste geocode",
          "statusCode": 200,
          "headers": [
            { "key": "Content-Type", "value": "application/json" }
          ],
          "body": [
            {
              "name": "guanacaste",
              "lat": 10.5,
              "lon": -85.4,
              "country": "CR"
            }
          ],
          "rules": [
            {
              "target": "queryParam",
              "modifier": "q",
              "value": "guanacaste,CR",
              "operator": "equals"
            }
          ]
        }
      ]
    },
    {
      "uuid": "route-weather",
      "documentation": "Mocked weather endpoint for coordinates",
      "method": "get",
      "endpoint": "/data/2.5/weather",
      "responses": [
        {
          "uuid": "resp-weather-guanacaste",
          "label": "Current weather for Guanacaste",
          "statusCode": 200,
          "headers": [
            { "key": "Content-Type", "value": "application/json" }
          ],
          "body": {
            "coord": { "lat": 10.5, "lon": -85.4 },
            "weather": [
              { "id": 801, "main": "Clouds", "description": "few clouds", "icon": "02d" }
            ],
            "main": {
              "temp": 302.15,
              "feels_like": 305.0,
              "pressure": 1012,
              "humidity": 70
            },
            "wind": { "speed": 2.6, "deg": 140 },
            "clouds": { "all": 20 },
            "dt": 1700000000,
            "sys": { "country": "CR" },
            "name": "guanacaste"
          }
        }
      ]
    },
    {
      "uuid": "route-health",
      "documentation": "Health check for CI readiness",
      "method": "get",
      "endpoint": "/health",
      "responses": [
        {
          "uuid": "resp-health",
          "label": "Mockoon Health OK",
          "statusCode": 200,
          "headers": [
            { "key": "Content-Type", "value": "application/json" }
          ],
          "body": { "status": "ok" }
        }
      ]
    }
  ]
}
